<gatein-resources
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_resources_1_3 http://www.gatein.org/xml/ns/gatein_resources_1_3"
    xmlns="http://www.gatein.org/xml/ns/gatein_resources_1_3">

  <portlet-skin>
    <application-name>presentation</application-name>
    <portlet-name>ContentListViewerPortlet</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/skin/Stylesheet.css</css-path>
    <css-priority>40</css-priority>
  </portlet-skin>

  <module>
    <name>JQueryEasing</name>
    <as>jqEasing</as>
    <script>
        <path>/javascript/jquery/jquery.easing-1.3.js</path>
    </script>
    <depends>
      <module>jquery</module>
      <as>jQuery</as>
    </depends>
  </module>

  <module>
    <name>NewsSlider</name>
    <script>
      <path>/javascript/content-list-viewer/news-slider.js</path>
    </script>
    <depends>
      <module>jquery</module>
      <as>jQuery</as>
    </depends>
    <depends>
      <module>JQueryEasing</module>
    </depends>
  </module>

</gatein-resources>